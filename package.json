{
  "name": "@probelabs/memaris",
  "version": "0.4.1",
  "description": "Stop re-teaching your AI. Turn past Claude Code sessions into persistent memory that follows you across projects.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "memaris": "dist/cli.js"
  },
  "type": "module",
  "private": false,
  "homepage": "https://probelabs.com/memaris/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/probelabs/memaris.git"
  },
  "bugs": {
    "url": "https://github.com/probelabs/memaris/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build --target=node ./src/index.ts --outfile=dist/index.js && bun build --target=node ./src/cli/index.ts --outfile=dist/cli.js && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "dev": "bun run src/cli/index.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "deploy:site": "cd site && npx wrangler pages deploy . --project-name=probelabs-site --commit-dirty=true"
  },
  "keywords": [
    "claude-code",
    "conversation-analysis",
    "ai-insights",
    "memory-analysis",
    "pattern-detection",
    "ai-memory",
    "chat-history",
    "developer-tools",
    "claude",
    "anthropic",
    "ai-tools",
    "productivity"
  ],
  "author": "Probe Labs <hello@probelabs.com> (https://probelabs.com)",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@types/cli-progress": "^3.11.6",
    "@types/readline-sync": "^1.4.8",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
